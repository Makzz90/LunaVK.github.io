												<DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=NegativeOpenPaneLengthMinusCompactLength}" />
												<SplineDoubleKeyFrame
